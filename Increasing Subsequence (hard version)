#include <bits/stdc++.h>
using namespace std;
 
#define fio() ios_base::sync_with_stdio(false);\
cin.tie(NULL);
 
#define md 1000000007
typedef long long int lli;
typedef float fl;
#define mem(arr,x) memset(arr,x,sizeof(arr))


std::vector <int> x;
std::vector <int> y;

map <int, int> xx;
map <int, int> yy;

std::vector <int> :: iterator vit;
map <int,int> :: iterator mit;

typedef struct tim
            {
               lli a; 
               lli pos;
            }an;


lli comparator(an p,an q) 
{ 
    return (   p.a < q.a ) ; 
} 

lli power(lli x, lli y, lli p) 
{ 
    lli res = 1;    
    x = x % p;  
    while (y > 0) 
    { 
        if (y & 1) 
            res = (res*x) % p; 
  
        y = y>>1; 
        x = (x*x) % p; 
    } 
    return res; 
}
 
 
lli modInverse(lli n, lli p) 
{ 
    return power(n, p-2, p); 
}

 
int main()
{    
    fio();
    lli  n,i,j,k,l;
    cin>>n;
    lli a[n];
    
    for(i=0;i<n;i++)
    	{ cin>>a[i]; }
	
	stack<lli> ans;
	vector<char> s;
	lli temp=INT_MIN;
	lli count=0;
	
	for(i=0,j=n-1 ; i<n && i<=j && j>=0; )
	{
	    if(a[i]==a[j]) break;
		if(temp<a[i] && temp<a[j])
		{
		   if(a[i]<a[j] && a[i]>temp) { temp=a[i]; i++; s.push_back('L'); count++;	}
		   else if(a[j]>temp) { temp=a[j];  s.push_back('R'); count++; j--;	}
		}
		else if(temp<a[i])
		{
			temp=a[i]; i++; s.push_back('L'); count++;
		}
		else if(temp<a[j])
		{
			temp=a[j];  s.push_back('R'); count++; j--;
		}
		else break;
	}
	

	  if(a[i]==a[j])
		{
		    lli l,z,r;
		    z=temp;
		    l=r=0;
		    for(lli tt=i;tt<=j;tt++)
		        if(a[tt]>z)
		        {
		            z=a[tt]; l++;
		        }
		        else break;
		    
		    z=temp;
		    for(lli tt=j;tt>=i;tt--)
		        if(a[tt]>z)
		        {
		            z=a[tt]; r++;
		        }
		        else break;
		        
		       if(l>r)
		       {
		           while(l--)   
		           { count++;  s.push_back('L'); }
		       }
		       else 
		       {
		           while(r--)   
		           { count++;  s.push_back('R'); }
		       }
		}
	
	
	cout<<count<<endl;
    for(i=0;i<s.size();i++)	cout<<s[i];
   
}
